{
	"name": "asciidocToolbar-vscode",
	"displayName": "asciidocToolbar",
	"description": "Toolbar for AsciiDoctor",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:asciidocToolbar.bold",
		"onCommand:asciidocToolbar.italic",
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"languages": [
			{
				"id": "asciidoc",
				"aliases": [
					"AsciiDoc",
					"AsciiDoc(tor)"
				],
				"extensions": [
					".adoc",
					".ad",
					".asciidoc",
					"asc"
				]
			}
		],
		"commands": [
			{
				"command": "asciidocToolbar.bold",
				"title": "AsciidocToolbar.Bold",
				"category": "Other",
				"icon": {
					"light": "./media/bold-text-option-light.svg",
					"dark": "./media/bold-text-option-dark.svg"
				}
			},
			{
				"command": "asciidocToolbar.italic",
				"title": "AsciidocToolbar.Italic",
				"category": "Other",
				"icon": {
					"light": "./media/italic-text-option-light.svg",
					"dark": "./media/italic-text-option-dark.svg"
				}
			},
			{
				"command": "extension.encdetect",
				"title": "encdetect"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "asciidocToolbar.bold",
					"when": "editorLangId == asciidoc",
					"group": "navigation"
				},
				{
					"command": "asciidocToolbar.italic",
					"when": "editorLangId == asciidoc",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {

	}
}
